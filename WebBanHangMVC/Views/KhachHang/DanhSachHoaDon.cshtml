@model List<WebBanHangMVC.Data.HoaDon>

@{
    ViewData["Title"] = "DanhSachHoaDon";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h1>Danh sách đơn hàng của bạn</h1>
<br />
<br />
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr style="background-color: #A0522D; color:white">
                <th>Mã Đơn Hàng</th>
                <th>Tên Khách Hàng</th>
                <th>Ngày Đặt Hàng</th>
                <th>Cách Vận Chuyển</th>
                <th>Cách Thanh Toán</th>
                <th>Ghi Chú</th>
                <th>Trạng Thái</th>
                <th>Chi Tiết Hóa Đơn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hoaDon in Model)
            {
                <tr>
                    <td>@hoaDon.MaHd</td>
                    <td>@hoaDon.HoTen</td>
                    <td>@hoaDon.NgayDat.ToShortDateString()</td>
                    <td>@hoaDon.CachVanChuyen</td>
                    <td>@hoaDon.CachThanhToan</td>
                    <td>@hoaDon.GhiChu</td>
                    <td>
                        @if (ViewBag.TrangThaiMapping.ContainsKey(hoaDon.MaTrangThai))
                        {
                            @ViewBag.TrangThaiMapping[hoaDon.MaTrangThai]
                        }
                        else
                        {
                            <p>Trạng thái không xác định</p>
                        }
                    </td>
                    <td>
                        <a style="color: #A0522D" href="@Url.Action("ChiTietHoaDon", "KhachHang", new { maHd = hoaDon.MaHd })">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có đơn hàng nào.</p>
}
