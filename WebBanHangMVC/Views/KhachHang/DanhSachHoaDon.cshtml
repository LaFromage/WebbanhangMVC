<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="position-relative card table-nowrap table-card">
                <div class="card-header align-items-center">
                    <h5 class="mb-0">Danh Sách Đơn Hàng Của Bạn</h5>
                </div>
                <div class="table-responsive">
                    @if (Model.Count > 0)
                    {
                        <table class="table mb-0">
                            <thead class="small text-uppercase bg-body text-muted">
                                <tr>
                                    <th>Mã Đơn Hàng</th>
                                    <th>Tên Khách Hàng</th>
                                    <th>Ngày Đặt Hàng</th>
                                    <th>Cách Thanh Toán</th>
                                    <th>Ghi Chú</th>
                                    <th>Trạng Thái</th>
                                    <th>Tổng Tiền</th>
                                    <th>Chi Tiết Hóa Đơn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hoaDon in Model)
                                {
                                    <tr class="align-middle">
                                        <td>@hoaDon.MaHd</td>
                                        <td>@hoaDon.HoTen</td>
                                        <td>@hoaDon.NgayDat.ToShortDateString()</td>
                                        <td>@hoaDon.CachThanhToan</td>
                                        <td>@hoaDon.GhiChu</td>
                                        <td>
                                            @if (ViewBag.TrangThaiMapping.ContainsKey(hoaDon.MaTrangThai))
                                            {
                                                @ViewBag.TrangThaiMapping[hoaDon.MaTrangThai]
                                            }
                                            else
                                            {
                                                <p>Trạng thái không xác định</p>
                                            }
                                        </td>
                                        <td>@hoaDon.TongTien</td>
                                        <td>
                                            <a style="color: #A0522D" href="@Url.Action("ChiTietHoaDon", "KhachHang", new { maHd = hoaDon.MaHd })">Xem</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Không có đơn hàng nào.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>