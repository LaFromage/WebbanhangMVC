@model WebBanHangMVC.ViewModels.LoginVM

@{
    ViewData["Title"] = "Đăng nhập";
}
<br />
<br />
<br />
<br />
<br />
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white">
                    <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
                        <div class="card-body p-5 text-center" style="background-color: #A0522D; border-radius:0.5rem">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h1 class="text-white-50 mb-5" style="color: White">Đăng Nhập</h1>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label asp-for="@Model.UserName" class="form-label my-3"></label><sup>*</sup>
                                    <input asp-for="@Model.UserName" class="form-control form-control-lg">
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                </div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                                    <input asp-for="@Model.Password" class="form-control form-control-lg">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>
                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                            </div>
                            <div>
                                <p class="mb-0">
                                    Don't have an account? <a asp-controller="KhachHang" asp-action="DangKy" class="text-white-50 fw-bold">Sign Up</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>