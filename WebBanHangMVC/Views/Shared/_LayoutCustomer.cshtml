<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>ECommerce-Shop</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div>
        <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar start -->
        <div class="container-fluid fixed-top">
            <div class="container topbar bg-primary d-none d-lg-block">
                <div class="d-flex justify-content-between">
                    <div class="top-info ps-2">
                        <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">QNU University</a></small>
                        <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">hung4351050116@st.qnu.edu.vn</a></small>
                    </div>
                </div>
            </div>
            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <a href="" class="navbar-brand"><h1 class="text-primary display-6">EShop</h1></a>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="navbar-nav mx-auto">
                            <a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link active">Trang chủ</a>
                            <a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link">Cửa hàng</a>
                            <a asp-action="Index" asp-controller="Cart" class="nav-item nav-link">Giỏ hàng</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Thành viên</a>
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="KhachHang" asp-action="Profile" class="dropdown-item">Thông tin cá nhân</a>
                                        <a asp-controller="KhachHang" asp-action="DangXuat" class="dropdown-item">Đăng xuất</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="KhachHang" asp-action="DangKy" class="dropdown-item">Đăng Ký</a>
                                        <a asp-controller="KhachHang" asp-action="DangNhap" class="dropdown-item">Đăng Nhập</a>
                                    }
                                </div>
                            </div>
                            <a href="https://www.facebook.com/la.fromage.7554/" class="nav-item nav-link">Liên hệ</a>
                        </div>
                        <div class="d-flex m-3 me-0">
                            @await Component.InvokeAsync("Cart")
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="KhachHang" asp-action="Profile" title="Xem thông tin người dùng" class="my-auto">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>
                            }
                            else
                            {
                                <a asp-controller="KhachHang" asp-action="DangNhap" title="Đăng nhập" class="my-auto">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->
        <div class=" Navbar" style="min-height:400px">
            @RenderBody()
        </div>
        @await Html.PartialAsync("_Footer")
    </div>

    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#searchButton").click(function () {
                let url = '/Hanghoa/Search?query=' + $("#searchText").val();
            });
        });
    </script>
</body>
</html>