@model IEnumerable<WebBanHangMVC.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name" style="color:#A0522D">
                        <a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.MaLoai" style="color:#A0522D">@item.TenLoai</a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>