@using Microsoft.AspNetCore.Mvc
@model WebBanHangMVC.Data.HoaDon

@{
    ViewData["Title"] = "Chi Tiết Hóa Đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi Tiết Hóa Đơn</h1>

<div>
    <h4>Thông tin hóa đơn:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã Hóa Đơn
        </dt>
        <dd class="col-sm-10">
            @Model.MaHd
        </dd>
    </dl>
</div>

<div>
    <h4>Chi tiết sản phẩm:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Mã Sản Phẩm
                </th>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Đơn Giá
                </th>
                <th>
                    Số Lượng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietHds)
            {
                <tr>
                    <td>
                        @item.MaHhNavigation.MaHh
                    </td>
                    <td>
                        @item.MaHhNavigation.TenHh
                    </td>
                    <td>
                        @item.DonGia
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>