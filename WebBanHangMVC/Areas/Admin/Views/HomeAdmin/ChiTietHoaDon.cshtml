@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc
@model WebBanHangMVC.Data.HoaDon

@{
    ViewData["Title"] = "Chi Tiết Hóa Đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<br />
<p>@TempData["Message"]</p>
<div class="container">
    <div class="row" style="width: 1000px; margin-left: -200px">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="position-relative card table-nowrap table-card">
                <div class="card-header align-items-center">
                    <div>
                        <h4>Thông tin hóa đơn</h4>
                        <hr />
                        <div class="row1">
                            <dt class="col-sm-2">
                                Mã Hóa Đơn
                            </dt>
                            <dd class="col-sm-10">
                                @Model.MaHd
                            </dd>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="small text-uppercase bg-body text-muted">
                            <tr class="table">
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Đơn Giá</th>
                                <th>Số Lượng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietHds)
                            {
                                <tr class="align-middle">
                                    <td>
                                        @item.MaHhNavigation.MaHh
                                    </td>
                                    <td>
                                        @item.MaHhNavigation.TenHh
                                    </td>
                                    <td>
                                        @item.DonGia
                                    </td>
                                    <td>
                                        @item.SoLuong
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="DanhSachHoaDon" asp-controller="HomeAdmin" class="btn btn-primary">Danh sách hóa đơn</a>
                </div>
            </div>
        </div>
    </div>
</div>