@using X.PagedList
@using X.PagedList.Mvc.Core
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IPagedList<WebBanHangMVC.Data.HoaDon>
@using WebBanHangMVC.Helpers

@{
    ViewData["Title"] = "DanhSachHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    // Từ điển ánh xạ trạng thái tới lớp CSS
    Dictionary<int, string> trangThaiClasses = new Dictionary<int, string>
    {
        { -1, "trang-thai-huy-don" },
        { 0, "trang-thai-moi-dat" },
        { 1, "trang-thai-cho-giao" },
        { 2, "trang-thai-da-giao" }
    };
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<h1>Danh sách đơn hàng</h1>
<br />
<br />
<p>@TempData["Message"]</p>
<div class="container">
    <div class="row" style="width: 1200px; margin-left: -100px">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="position-relative card table-nowrap table-card">
                <div class="card-header align-items-center">
                    <form asp-action="DanhSachHoaDon" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control bg-light border-0 small" placeholder="Tìm kiếm họ tên" value="@ViewData["CurrentFilter"]">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><i class="fas fa-search fa-sm"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="small text-uppercase bg-body text-muted">
                            <tr class="table-warning">
                                <th>Mã</th>
                                <th>Account</th>
                                <th>Ngày Đặt</th>
                                <th>Họ Tên</th>
                                <th>Địa Chỉ</th>
                                <th>Điện Thoại</th>
                                <th>Payment</th>
                                <th>Total</th>
                                <th>State</th>
                                <th>Ghi Chú</th>
                                <th>Hành Động</th>
                                <th>Xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="align-middle">
                                    <td>@Html.DisplayFor(modelItem => item.MaHd)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MaKh)</td>
                                    <td style="width:220px">@Html.DisplayFor(modelItem => item.NgayDat)</td>
                                    <td style="width:220px">@Html.DisplayFor(modelItem => item.HoTen)</td>
                                    <td style="width:150px">@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CachThanhToan)</td>
                                    <td><a>$</a>@Html.DisplayFor(modelItem => item.TongTien)</td>
                                    <td class="@trangThaiClasses[item.MaTrangThai]" style="width:215px">
                                        @if (ViewBag.TrangThaiMapping.ContainsKey(item.MaTrangThai))
                                        {
                                            @ViewBag.TrangThaiMapping[item.MaTrangThai]
                                        }
                                        else
                                        {
                                            <p>Trạng thái không xác định</p>
                                        }
                                    </td>
                                    <td style="width:180px">@Html.DisplayFor(modelItem => item.GhiChu)</td>
                                    <td><a href="@Url.Action("ChonTrangThai", "HomeAdmin", new { maHd = item.MaHd })" class="btn btn-primary">Chuyển trạng thái</a></td>
                                    <td>
                                        <a href="@Url.Action("ChiTietHoaDon", "HomeAdmin", new { maHd = item.MaHd })" class="btn btn-primary">Xem</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="pagination d-flex justify-content-center mt-5">
    <nav>
        @Html.PagedListPager(Model, page => Url.Action("DanhSachHoaDon", new { page, searchString = ViewData["CurrentFilter"] }),
                 new PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
        }
                 )
    </nav>
</div>